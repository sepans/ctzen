    "styled-components": "^4.2.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:server start:web",
    "start:server": "node src/server",
    "watch:server": "nodemon --watch src/server src/server",
    "start:web": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "relay": "get-graphql-schema http://localhost:4000/graphql > ./src/graphql.schema && relay-compiler --src ./src --schema ./src/graphql.schema --extensions ts tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-relay": "^4.0.0",
    "customize-cra": "^0.2.13",
    "nodemon": "^1.19.1",
